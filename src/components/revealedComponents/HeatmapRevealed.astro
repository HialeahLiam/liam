import { Image } from "astro:assets";
import heatmapKeys from "../../assets/heatmap-keys.png";
import heatmapTrackDisplay from "../../assets/heatmap-track-display.png";
import spotifyApiPitchesImage from "../../assets/spotify-api-pitches.png";
---

