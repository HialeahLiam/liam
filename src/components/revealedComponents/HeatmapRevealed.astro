  (!reveal || reveal === 1) && (
    <div
      data-anchor-number="1"
      class="flex flex-col items-center justify-center "
    >
      <div class="w-1/2 rounded-lg overflow-hidden  relative md:top-8 md:-left-16 top-5 -left-10 z-10 drop-shadow">
        <Image src={heatmapTrackDisplay} alt="" class="rounded-lg" />
      </div>
      <div class="w-1/2 rounded-lg overflow-hidden    relative md:-right-16  md:bottom-8 -right-10 bottom-5">
        <Image src={heatmapKeys} alt="" class="rounded-lg" />
      </div>
    </div>
  )
}
{
  (!reveal || reveal === 2) && (
    <div
      data-anchor-number="2"
      class="flex items-center justify-center w-3/4 mx-auto container "
    >
      <div class="w-3/4 rounded-lg overflow-hidden  drop-shadow-[0_0px_20px_rgba(114,31,242,0.30)]">
        <Image src={spotifyApiPitchesImage} alt="" class="rounded-lg" />
      </div>
    </div>
  )
}
{(!reveal || reveal === 3) && <div data-anchor-number="3">third</div>}
